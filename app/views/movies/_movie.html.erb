<div class="col-12 col-md-6 col-lg-4">
  <div class="card border-dark mb-3">
    <div class="card-header movie-header p-0">
      <%= embed_youtube(movie.url) %>
    </div>
    <div class="card-body text-dark movie-body">
      <p id="movie-<%= movie.id %>">
        <object>
          <% if movie.watch_progressed_by?(current_user) %>
            <%= render "watchprogress", movie: movie %>
          <% else %>
            <%= render "diswatchprogress", movie: movie %>
          <% end %>
        </object>
      </p>
      <p class="card-text mt-3">Lv.<%= "#{movie_counter}".to_i + @movies.offset_value + 1%>ï¼š<%= movie.title %></p>
    </div>
  </div>
</div>
