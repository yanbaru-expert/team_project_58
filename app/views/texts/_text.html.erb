<div class="col-12 col-md-6 col-lg-4">
  <%= link_to text_path(text) do %>
    <div class="card content-card border-dark mb-3">
      <div class="card-header p-0">
        <img loading="lazy" alt="<%= text.title %>" class="img-fluid" src="/assets/no_image.jpg" >
      </div>
      <div class="card-body text-dark">
        <p id="text-<%= text.id %>">
          <object>
            <% if text.read_progressed_by?(current_user) %>
              <%= render "progress", text: text %>
            <% else %>
              <%= render "disprogress", text: text %>
            <% end %>
          </object>
        </p>
        <p class="card-text mt-3"><%= text.title %></p>
        <p>【<%= text.genre.capitalize %>】</p>
      </div>
    </div>
  <% end %>
</div>
